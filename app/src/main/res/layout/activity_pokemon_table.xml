<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <Button
        android:id="@+id/btnPerziura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pokemonų Peržiūra (toast)" />

    <Button
        android:id="@+id/btnPerziura2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pokemonų Peržiūra (buffer)" />

    <Button
        android:id="@+id/btnRedagavimas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pokemono redagavimas" />

    <Button
        android:id="@+id/btnTrinimas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pokemono trinimas" />

    <Button
        android:id="@+id/btnPaieska"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pokemono paieška" />
</LinearLayout>